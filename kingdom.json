{
  "variables": {
    "region": "us-west-1",
    "source_ami": "ami-9899c7f8",
    "kingdom_version": "v0.0.0"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "admin",
      "ami_name": "kingdom--{{timestamp}}",
      "tags": {
        "description": "A debian based ami for use with the kingdom PaaS project.",
        "kingdom_version": "{{user `kingdom_version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "keys/deploy_kingdom",
      "destination": "/tmp/packer/deploy_kingdom"
    },
    {
      "type": "shell",
      "environment_vars": [
        "MAIN_APP_VERSION=v0.0.1"
      ],
      "remote_folder": "/home/admin",
      "scripts": [
        "scripts/listen_for_sshd_port_53.sh"
      ]
    }
  ]
}
